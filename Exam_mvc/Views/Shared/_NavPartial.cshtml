<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trainee Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(to bottom, #87CEEB, #4682B4);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .navbar {
            background: black !important;
            backdrop-filter: blur(10px);
            border-radius: 12px;
        }

        .nav-link {
            color: #fff !important;
            transition: 0.3s;
        }

            .nav-link:hover {
                transform: scale(1.1);
                color: #FFD700 !important;
            }

        .container {
            flex: 1;
        }

        .footer {
            text-align: center;
            padding: 10px;
            background: rgba(255, 255, 255, 0.2);
            color: white;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-sm navbar-dark shadow-sm mb-3">
        <div class="container-fluid">
            <a class="navbar-brand text-white" href="/">TalentGrow</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Login">Login</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/">Home</a>
                        </li>
                     
                        <li class="nav-item">
                            <a class="nav-link" href="/Trainee">Trainees</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Track">Tracks</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Course">Courses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/TraineeCourse">Trainee Courses</a>
                        </li>

                    }
                </ul>

                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <span class="nav-link">Hello, @User.Identity.Name</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Logout">Logout</a>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </nav>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>

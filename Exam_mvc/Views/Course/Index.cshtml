@model IEnumerable<Exam_mvc.Models.Course>

@{
    ViewData["Title"] = "Courses";
}


<h2><i class="fas fa-book-open"></i> Courses List</h2>
<a asp-action="Create" class="btn btn-warning mb-3">
    <i class="fas fa-plus"></i> Add New Course
</a>

<table class="table table-hover shadow-sm bg-white rounded">
    <thead class="table-dark">
        <tr>
            <th><i class="fas fa-book"></i> Course Topic</th>
            <th><i class="fas fa-graduation-cap"></i> Grade</th>
            <th><i class="fas fa-cogs"></i> Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Topic</td>
                <td>@course.Grade</td>
                <td>
                    <a asp-action="Details" asp-route-id="@course.ID" class="btn btn-info btn-sm">
                        <i class="fas fa-eye"></i> View
                    </a>
                    <a asp-action="Edit" asp-route-id="@course.ID" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@course.ID" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash-alt"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}

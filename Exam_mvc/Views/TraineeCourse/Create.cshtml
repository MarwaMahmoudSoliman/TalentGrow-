<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="TraineeID">اختر المتدرب:</label>
        <select name="traineeId" class="form-control" asp-items="ViewBag.Trainees"></select>
    </div>

    <div class="form-group">
        <label for="Courses">اختر الدورات:</label>
        <select name="courseIds" class="form-control" asp-items="ViewBag.Courses" multiple></select>
    </div>

    <button type="submit" class="btn btn-success">
        <i class="fas fa-user-plus"></i> تعيين الدورات
    </button>
</form>
